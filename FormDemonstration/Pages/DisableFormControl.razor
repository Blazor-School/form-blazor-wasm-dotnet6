@page "/disable-form-control"
@using FormDemonstration.FormModels

<h3>DisableFormControl</h3>
<EditForm Model="FormModel">
    <label>
        Form control 1:
        <InputText class="form-control" @bind-Value="FormModel.ExampleString" disabled="true"/>
    </label>
    <label>
        Form control 2:
        <InputText class="form-control" @bind-Value="FormModel.ExampleString" @bind-disabled="DisableFormControl2"/>
    </label>
    <button class="btn btn-primary" type="button" @onclick="_ => DisableFormControl2 = !DisableFormControl2">Toggle enable form control 2</button>
</EditForm>

@code {
    public DisableFormControlFormModel FormModel { get; set; } = new();
    public bool DisableFormControl2 { get; set; } = false;
}